# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8

# enforce tabs
indent_size = 4
indent_style = tab
insert_final_newline = true
tab_width = 4

# other
trim_trailing_whitespace = true
max_line_length = 80

[*.php]
quote_type = "single"
single_quote = true
singleQuote = true

[*.{html,css,blade.php,md}]
max_line_length = 120

[*.{yml,yaml}]
# imagine using indentation for syntax...
indent_style = space
tab_width = 2
indent_size = 2
